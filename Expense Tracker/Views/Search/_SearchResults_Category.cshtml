@model IEnumerable<dynamic>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">No results found.</div>
}
else
{

    <table class="table table-bordered table-dark">
        <thead>
            <tr>
                <th class="text-light">Title</th>
                <th class="text-light">Type</th>
                <th class="text-light">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td class="text-light">@category.Title</td>
                    <td class="text-light">@category.Type</td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                        <a asp-controller="Category" asp-action="Category" asp-route-id="@category.CategoryId" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

 
}

<style>
    body {
        background-color: #1a1a1a; /* Dark background */
        font-family: 'Poppins', sans-serif;
    }

    .table {
        border-color: rgba(255, 255, 255, 0.3); /* Light border for visibility */
    }

        .table th, .table td {
            vertical-align: middle;
        }

    .btn {
        font-weight: 600; /* Bold buttons for better contrast */
    }

    .btn-warning {
        background-color: #f0ad4e;
        border: none;
    }

    .btn-danger {
        background-color: #d9534f;
        border: none;
    }

    .btn-info {
        background-color: #5bc0de;
        border: none;
    }

    .btn-warning:hover {
        background-color: #ec971f;
    }

    .btn-danger:hover {
        background-color: #c9302c;
    }

    .btn-info:hover {
        background-color: #31b0d5;
    }
</style>

