@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <h1 class="text-gradient text-center mb-5">Create Account</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-hover shadow-lg p-4">
                <form method="post">
                    <div class="form-group mb-3">
                        <label for="username" class="text-light">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="email" class="text-light">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="password" class="text-light">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="confirmPassword" class="text-light">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" required>
                    </div>

                    <button type="submit" class="btn btn-gradient btn-block">Register</button>
                </form>

                <div class="mt-3 text-center">
                    <a href="/User/Login" class="text-light">Already have an account? Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
