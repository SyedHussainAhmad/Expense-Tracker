@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h1 class="text-gradient text-center mb-5">Login</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-hover shadow-lg p-4">
                <form method="post">
                    <div class="form-group mb-3">
                        <label for="username" class="text-light">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="password" class="text-light">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                    </div>

                    <button type="submit" class="btn btn-gradient btn-block">Login</button>
                </form>

                <div class="mt-3 text-center">
                    <a href="/User/Register" class="text-light">Don't have an account? Register</a><br>
                    <a href="#" class="text-warning">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
</div>
