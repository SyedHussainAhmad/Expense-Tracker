@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <h1 class="text-gradient text-center mb-5">User Profile</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-hover shadow-lg p-4">
                <h2 class="text-light">Account Information</h2>

                <div class="form-group mb-3">
                    <label for="username" class="text-light">Username</label>
                    <input type="text" class="form-control" id="username" value="JohnDoe" disabled>
                </div>

                <div class="form-group mb-3">
                    <label for="email" class="text-light">Email</label>
                    <input type="email" class="form-control" id="email" value="john.doe@example.com" disabled>
                </div>

                <h2 class="text-light mt-4">Edit Account Information</h2>
                <form method="post">
                    <div class="form-group mb-3">
                        <label for="newUsername" class="text-light">New Username</label>
                        <input type="text" class="form-control" id="newUsername" name="newUsername" placeholder="New username">
                    </div>

                    <div class="form-group mb-3">
                        <label for="newEmail" class="text-light">New Email</label>
                        <input type="email" class="form-control" id="newEmail" name="newEmail" placeholder="New email">
                    </div>

                    <button type="submit" class="btn btn-gradient btn-block">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>
