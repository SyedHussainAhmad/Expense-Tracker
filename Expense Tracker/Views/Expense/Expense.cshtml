@model IEnumerable<ExpenseTracker.Models.Expense>

<h2 class="text-light text-center mb-4">Expense Details</h2>

<table class="table table-bordered table-dark table-striped shadow-lg rounded">
    <thead>
        <tr>
            <th class="text-light">Category</th>
            <th class="text-light">Amount</th>
            <th class="text-light">Date</th>
            <th class="text-light">Note</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in Model)
        {
                <tr>
                    <td class="text-light">@expense.Category.Title</td>
                    <td class="text-light">@expense.Amount</td>
                    <td class="text-light">@expense.Date.ToString("MM/dd/yyyy")</td>
                    <td class="text-light">@expense.Note</td>
                </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-primary btn-gradient shadow-button w-100">Back to Expenses</a>
</div>

<style>
    h2 {
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 20px;
        font-size: 1.5rem; /* Smaller header font */
    }

    /* Table styles */
    .table {
        background-color: #1a1a1a;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }

    .table-bordered {
        border: 1px solid #444;
    }

    .table th, .table td {
        text-align: center;
        padding: 12px;
        font-size: 0.875rem;
    }

    /* Button Styles with 3D hover effect */
    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: 600;
        letter-spacing: 1px;
        border-radius: 10px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: translateY(-3px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }


    .btn-gradient:hover {
        background: linear-gradient(145deg, #5a6268, #6c757d);
        transform: translateY(-3px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    /* Table header text styles */
    .table th {
        background-color: #343a40;
        color: #fff;
        font-weight: bold;
    }

    /* Light text for table cells */
    .table td {
        color: #d1d1d1;
    }
</style>
