@model IEnumerable<ExpenseTracker.Models.Category>

<h2 class="text-light">Category Details</h2>

<table class="table table-bordered table-dark">
    <thead>
        <tr>
            <th class="text-light">Title</th>
            <th class="text-light">Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td class="text-light">@category.Title</td>
                <td class="text-light">@category.Type</td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-4">
    <a href="/Category/Index" class="btn btn-success btn-gradient">Back to Categories</a>
</div>

<style>
    body {
        background-color: #1a1a1a; /* Dark background */
        font-family: 'Poppins', sans-serif;
    }

    .table {
        border-color: rgba(255, 255, 255, 0.3); /* Light border for visibility */
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn {
        font-weight: 600; /* Bold buttons for better contrast */
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
