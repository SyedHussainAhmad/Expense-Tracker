@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container-fluid px-4 py-5">
    <h1 class="text-center mb-5 text-gradient">Admin Dashboard</h1>

    <!-- Statistics Section -->
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="stat-card">
                <h3>Total Users</h3>
                <p class="stat-number">@ViewBag.TotalUsers</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <h3>Total Expenses</h3>
                <p class="stat-number">@ViewBag.TotalExpenses</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <h3>Total Categories</h3>
                <p class="stat-number">@ViewBag.TotalCategories</p>
            </div>
        </div>
    </div>


    <!-- Users Section -->
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-gradient mb-3">Users</h3>
            <table class="table table-dark table-hover shadow rounded-3">
                <thead class="bg-gradient">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in ViewBag.Users)
                    {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                    <a href="@Url.Action("UserDetails", "Admin", new { userId = user.UserName })" 
                                       class="btn btn-primary btn-sm btn-gradient rounded-pill">View Details</a>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
