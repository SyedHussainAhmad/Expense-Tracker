@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Login_Layout.cshtml"; // Ensures it uses the custom layout
}

<div class="login-container d-flex justify-content-center align-items-center">
    <!-- Card Container -->
    <div class="login-card p-4 shadow-lg rounded">
        <div class="text-center mb-4">
            <h1 class="display-5 text-light">Register</h1>
            <p class="text-muted">Join us! Create your account now.</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Email Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control bg-dark text-light" autocomplete="username" placeholder="Email" />
                <label asp-for="Input.Email" class="text-light">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control bg-dark text-light" autocomplete="new-password" placeholder="Password" />
                <label asp-for="Input.Password" class="text-light">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-light" autocomplete="new-password" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword" class="text-light">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-2 mb-3">
                Register
            </button>

            <!-- Links -->
            <div class="text-center">
                <p>
                    <a asp-page="./Login" class="text-light">Already have an account? Log in</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
