@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Login_Layout.cshtml";

}

<div class="login-container d-flex justify-content-center align-items-center">
    <!-- Card Container -->
    <div class="login-card p-4 shadow-lg rounded">
        <div class="text-center mb-4">
            <h1 class="display-5 text-light">Log In</h1>
            <p class="text-muted">Welcome back! Please log in to continue.</p>
        </div>

        <form id="login-form" method="post" class="needs-validation">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Email Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control bg-dark text-light" autocomplete="username" placeholder="Email" />
                <label asp-for="Input.Email" class="text-light">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control bg-dark text-light" autocomplete="current-password" placeholder="Password" />
                <label asp-for="Input.Password" class="text-light">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Remember Me Checkbox -->
            <div class="form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input" id="rememberMeCheckbox" />
                <label asp-for="Input.RememberMe" class="form-check-label text-light">Remember Me</label>
            </div>

            <!-- Submit Button -->
            <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2 mb-3">
                Log In
            </button>

            <!-- Links -->
            <div class="text-center">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-light">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-light">Register as a new user</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
